{
  "name": "easyDiffractionLib Dev",
  
  "appPort": [3000],
  //"forwardPorts": [8080, 8081],
  // Set *default* container specific settings.json values
  "settings": { 
    "terminal.integrated.shell.linux": "/bin/bash",
  },
  // Add the IDs of extensions you want to install
  "extensions": [
    "ms-python.python",
  ],
  // Commands to run after the container is created.
  "postCreateCommand": "curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | /opt/python/3.7/bin/python && export PATH=$PATH:$HOME/.poetry/bin",
  // Uncomment to connect as a non-root user.
  //"remoteUser": "vscode",
}
